<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/songName" />

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/song_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:text="@string/songName"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/song_details_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="@+id/song_name_text_view"
            android:layout_marginTop="36dp"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:text="@string/songDetails"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/image_play"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/song_name_text_view"
            android:layout_alignEnd="@+id/song_name_text_view"
            android:layout_alignRight="@+id/song_name_text_view"
            android:background="@drawable/text_view_after_background"
            android:contentDescription="@string/nowPlaying"
            android:foregroundGravity="center"
            android:src="@drawable/outline_play_circle_outline_white_24dp" />

        <TextView
            android:id="@+id/total_song_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/song_name_text_view"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:text="@string/totalTime"
            android:textColor="@color/colorBlack"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>